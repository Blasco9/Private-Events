<header>
  <nav>
    <ul>
      <li><%= link_to 'Events', events_path %></li>
      <% if current_user %>
        <li><%= link_to 'Create Event', new_event_path %></li>
        <li><%= link_to current_user.username, user_path(current_user) %></li>
        <li><%= link_to 'Logout', session_path(current_user), method: :delete %></li>
      <% else %>
        <li><%= link_to 'Login', login_path %></li>
      <% end %>
    </ul>
  </nav>
</header>