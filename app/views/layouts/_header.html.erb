<header class="mb-5">
  <nav class="navbar justify-content-center bg-light border-bottom">
    <ul class="nav">
      <li>
        <%= link_to 'All Events', events_path, class: 'nav-link' %>
      </li>
      <% if current_user %>
      <li>
        <%= link_to 'Your Events', user_path(current_user), class: 'nav-link' %>
      </li>
      <li>
        <%= link_to 'Create Event', new_event_path, class: 'nav-link' %>
      </li>
      <li>
        <%= link_to 'Logout', session_path(current_user), method: :delete, class: 'nav-link' %>
      </li>
      <% else %>
      <li>
        <%= link_to 'Login', login_path, class: 'nav-link' %>
      </li>
      <li>
        <%= link_to 'Register', new_user_path, class: 'nav-link' %>
      </li>
      <% end %>
    </ul>
  </nav>
</header>